<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.shicy.inclover.activity.SecretActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_secret_bg"
        android:scaleType="fitXY"
        android:contentDescription="@string/my_txt_empty"/>

    <TextView android:id="@+id/secret_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_secret_main_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_big"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView android:id="@+id/secret_text_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secret_text_title"
        android:text="•••••"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="42sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/secret_text_pwd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
