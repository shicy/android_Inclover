<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:clipToPadding">true</item>

        <item name="actionBarStyle">@style/action_bar</item>
    </style>

    <style name="action_bar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_primary</item>
        <item name="android:titleTextStyle">@style/action_bar_text</item>

        <item name="background">@color/app_primary</item>
        <item name="titleTextStyle">@style/action_bar_text</item>
    </style>

    <style name="action_bar_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/app_text_dark</item>
    </style>

</resources>
